{% endset %}
<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% include 'partials/meta.njk' %}
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;700&family=Work+Sans:ital,wght@0,900;1,900&display=swap" rel="stylesheet">

    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="wrapper">
        <div class="site-header__inner">
          <a href="/" class="site-header__logo">
            {% include '../../img/logo.svg' %}
          </a>
          
          <nav class="site-header__navigation">
            <ul class="horizontal-list">
              <li><a href="#">Why Blyth?</a></li>
              <li><a href="#">Documentation</a></li>
              <li><a href="#">Resources</a></li>
            </ul>
          
            <ul class="site-header__summary horizontal-list">
              <li><a href="https://github.com/ryangittings/blyth-css" target="_blank" rel="noopener noreferrer">v0.1.3</a></li>
              <li><a href="https://github.com/bly-th/css" target="_blank" rel="noopener noreferrer">{% include '../../img/icons/github.svg' %}</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    
    {{ content | safe }}
  </body>
</html>